---
import { storyblokEditable, renderRichText } from "@storyblok/astro";
const { blok } = Astro.props;

const content = renderRichText(blok.content, {
  resolver: (component, blok) => {
    switch (component) {
        case "eyebrow":
            return `<span class="eyebrow">${blok.content}</span>`;
        case "button":
            return `<a href="${blok.link.cached_url}" class="button">${blok.text}</a>`;
        default:
            return `Component ${component} not found`;
    }
  },
});
---
<section {...storyblokEditable(blok)} class={`hero-image`} style={`background-image: url("${blok.image.filename}");`}>
    <div class="content flow"><Fragment set:html={content}/></div>
</section>
<style lang="scss" is:global>
    .hero-image {
        display: grid;
        place-items: center;
        padding: 50px 1rem;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;

        h1 {
            color: #012F2C;
            font-size: clamp(2.5rem, -2.271rem + 15.2672vw, 7.5rem);
            
            em,
            i {
                font-style: normal;
                color: #417E74;
            }
        }

        > .content {
            background-color: #fff;
            padding: 1.5rem;
            text-align: center;
            max-width: 800px;
        }

        @media (min-width: 1024px) {
            padding: 100px;

            > .content {
                padding: 80px;
            }
        }
    }
</style>